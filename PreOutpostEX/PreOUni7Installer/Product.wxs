<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://schemas.microsoft.com/wix/2006/wi">

<Product Id="*" UpgradeCode="1D3D24BE-F80C-4CDF-810D-CE26F24488FD" Language="1033"
         Manufacturer="Bob -- K6RWY" Name="PreOUni7"
         Version="!(bind.fileVersion.PreOutpost.cmp)"
         >

  <Package InstallerVersion="200" Compressed="yes" InstallScope="perMachine"
           Manufacturer="Bob -- K6RWY" Description="Installs PreOUni7"
           Comments="Copyright (c) Bob -- K6RWY"
           />

  <MajorUpgrade Schedule="afterInstallInitialize"
                AllowDowngrades="no"   IgnoreRemoveFailure="no"   AllowSameVersionUpgrades="no"
                DowngradeErrorMessage="A newer version of [ProductName] is already installed." />

  <MediaTemplate EmbedCab="yes" />

  <UI Id="My_InstallDir.ui">
    <UIRef Id="WixUI_InstallDir" />
    <Publish Dialog="WelcomeDlg" Control="Next" Event="NewDialog" Value="InstallDirDlg">
      NOT Installed
    </Publish>
    <Publish Dialog="InstallDirDlg" Control="Back" Event="NewDialog" Value="WelcomeDlg" Order="2">
      1
    </Publish>
  </UI>

  <WixVariable Id="WixUIDialogBmp" Value="D:\Sources\WixApp\WixApp.sln\..\Debug\dialog.bmp"/>
  <WixVariable Id="WixUIBannerBmp" Value="D:\Sources\WixApp\WixApp.sln\..\Debug\banner.bmp"/>

  <Icon     Id="UIPreOutpostIcon.ico"
                              SourceFile="$(var.SolutionDir)..\PreOCommonFiles\res\UIPreOutpost.ico"/>
  <Icon     Id="PreOutpostIcon.ico"
                                SourceFile="$(var.SolutionDir)..\PreOCommonFiles\res\PreOutpost.ico"/>
  <Property Id="ARPPRODUCTICON"  Value="UIPreOutpostIcon.ico" />

  <Feature Id="ProductFeatures" Title="Main Product" Level="1" >
    <ComponentGroupRef Id="PreOutpost.ftr"/>
    <ComponentGroupRef Id="UninstallPreOutpost.ftr"/>
  </Feature>
</Product>

<Fragment>
<ComponentGroup Id="PreOutpost.ftr">
  <ComponentRef Id="PreOutpost.cmp"/>
  <ComponentRef Id="Help.cmp"/>
  <ComponentRef Id="AddressBook.cmp"/>
  <ComponentRef Id="RoutingInfo.cmp"/>
  <ComponentRef Id="RoutingSlip.cmp"/>
</ComponentGroup>
<ComponentGroup Id="UninstallPreOutpost.ftr">
  <ComponentRef Id="UninstallPreOutpost.cmp"/>
</ComponentGroup>
</Fragment>

<!--Directory structure-->
<Fragment>
  <Directory Id="TARGETDIR" Name="SourceDir">
    <Directory Id="ProgramFilesFolder">
      <Directory Id="PreOutpost.pff" Name="PreOutpost" />
    </Directory>

    <Directory Id="ProgramMenuFolder" Name="StartMenu">
      <Directory Id="PreOutpost.pmf" Name="PreOutpost" />
    </Directory>

    <Directory Id="DesktopFolder" Name="Desktop" />
  </Directory>

  <Property Id="ApplicationFolderName" Value="PreOutpost" />
  <Property Id="WIXUI_INSTALLDIR"      Value="PreOutpost.pff"/>
  <Property Id="WixAppFolder"          Value="WixPerMachineFolder" />
</Fragment>

<Fragment>

  <Component Id="PreOutpost.cmp"  Guid="B93CE36A-DCCD-4425-8910-25745B3B12F0"
                                                                          Directory="PreOutpost.pff">
    <File Id="PreOutpost.cmp" Source="$(var.SolutionDir)..\Release\PreOUni7.exe" KeyPath="yes"/>

    <Shortcut Id               = "PreOutpost.shc"
              Name             = "PreOutpost"
              Description      = "Configures all BBSes with User Data"
              Advertise        = "yes"
              Directory        = "PreOutpost.pmf"
              WorkingDirectory = "PreOutpost.pff"
              Icon             = "PreOutpostIcon.ico"
              />

    <Shortcut Id               = "PreOutpost.dsk"
              Name             = "PreOutpost"
              Description      = "Configures all BBSes with User Data"
              Advertise        = "yes"
              Directory        = "DesktopFolder"
              WorkingDirectory = "PreOutpost.pff"
              Icon             = "PreOutpostIcon.ico"
              />
  </Component>

  <Component Id="Help.cmp"  Guid="41E20DC8-269E-4115-AC11-91D2F8C7040E" Directory="PreOutpost.pff">
    <File Id="Help.cmp" Source="$(var.SolutionDir)..\Release\PreOutpost.chm" KeyPath="yes"/>
  </Component>

  <Component Id="AddressBook.cmp"  Guid="3AADC712-763E-4684-B5AB-CD5C0C139335"
                                                                          Directory="PreOutpost.pff">
    <File Id="AddressBook.cmp" Source="$(var.SolutionDir)..\Release\OPaddress.exe" KeyPath="yes"/>
  </Component>

  <Component Id="RoutingInfo.cmp"  Guid="329F4A82-AC48-4412-AFF8-DAD3D3339522"
                                                                          Directory="PreOutpost.pff">
    <File Id="RoutingInfo.cmp" Source="$(var.SolutionDir)..\Docs\RoutingInfo.pdf" KeyPath="yes"/>
  </Component>

  <Component Id="RoutingSlip.cmp"  Guid="2EF66B2E-4693-488D-A859-44CB960D2957"
                                                                          Directory="PreOutpost.pff">
    <File Id="RoutingSlip.cmp" Source="$(var.SolutionDir)..\Docs\RoutingSlip.pdf" KeyPath="yes"/>
  </Component>

</Fragment>

<Fragment>

  <Component Id="UninstallPreOutpost.cmp" 
                              Guid="61EC3C76-534A-42CD-9B56-C0D5244B43D7" Directory="PreOutpost.pmf">

    <Shortcut Id               = "UninstallPreOutpost.shc"
              Name             = "Uninstall PreOutpost"
              Description      = "Uninstalls PreOutpost"
              Target           = "[System64Folder]msiexec.exe"
              Arguments        = "/x [ProductCode]"
              Icon             = "UIPreOutpostIcon.ico"
              />
    <RemoveFolder Id="PreOutpost.uni" Directory="PreOutpost.pmf" On="uninstall"/>
    <RegistryValue Root="HKCU" Key="Software\UninstallPreOutpost.cmp" Name="installed"
                   Type="integer" Value="1" KeyPath="yes"/>
  </Component>

</Fragment>

</Wix>
